<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
        {% endblock %}
    </head>
        <body>
            <div class="container">
                <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                    <a class="navbar-brand" href="{{ path('homepage') }}">Homepage</a>
                    <div class="collapse navbar-collapse" >
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('homepage') }}">Posts</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('about') }}">About</a>
                            </li>
                            {% if  is_granted('ROLE_USER')%}
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('post_new') }}">New Post</a>
                                </li>
                            {% endif %}
                        </ul>
                        <div class="form-inline" style="color: ghostwhite;">
                            {% if  is_granted('ROLE_USER')%}
                                Logged as {{ app.user.firstname }} {{ app.user.lastname }}.
                                <a class="nav-link" href="{{ path('logout_security') }}">Logout</a>
                            {% else %}
                                <a class="nav-link" href="{{ path('login_form') }}">Login</a>
                                <a class="nav-link" href="{{ path('registration') }}">Registration</a>
                            {%  endif %}
                        </div>
                    </div>
                </nav>
                {% block body %}{% endblock %}
                {% block javascripts %}{% endblock %}
            </div>
    </body>

</html>